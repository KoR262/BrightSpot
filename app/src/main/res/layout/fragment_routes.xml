<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RoutesFragment"
    android:background="@color/backgroundColor"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayoutRoutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_gradient_without_border"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Маршруты-рекомендации"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout

        android:id="@+id/relativeLayoutRoutes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutRoutes"
        android:layout_marginBottom="60dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRoutesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/image_item">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>